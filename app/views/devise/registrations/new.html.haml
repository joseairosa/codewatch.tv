%div.container
  %h2.form-signin-heading Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name),  html: {class: 'form-group'}) do |f|
    = devise_error_messages!
    %div.form-group
      = f.label :username
      %br/
      = f.text_field :username, autofocus: true, class: 'form-control'
    %div.form-group
      = f.label :email
      %br/
      = f.email_field :email, class: 'form-control', class: 'form-control'
    %div.form-group
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "off", class: 'form-control'
    %div.form-group
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
    %br/
    %div= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block'
  = render "devise/shared/links"
