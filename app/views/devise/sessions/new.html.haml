= render partial: 'shared/breadcrumbs', locals: {page_name: 'Login'}
.container.content
  .row
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'reg-page'}) do |f|
        .reg-header
          %h2 Login to your account
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.fa.fa-user
          = f.text_field :login, autofocus: '', placeholder: 'Email address or username', required: '', type: 'text', class: 'form-control'
          -#%input.form-control{:placeholder => "Username", :type => "text"}
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.fa.fa-lock
          = f.password_field :password, autocomplete: 'off', placeholder: 'Password', required: '', type: 'password', class: 'form-control'
          -#%input.form-control{:placeholder => "Password", :type => "password"}
        .row
          - if devise_mapping.rememberable?
            .col-md-6.checkbox
              %label
                %input{:type => "checkbox"} Stay signed in
          .col-md-6
            -#%button.btn-u.pull-right{:type => "submit"} Login
        .row
          .col-md-12.margin-bottom-10
            = f.submit 'Sign in', class: 'btn-u'
            %a.btn-u.btn-u-default.pull-right{href: new_registration_path(resource_name)} Sign up
        .row
          .col-md-12
            = render "devise/shared/omniauth"
      %hr
        = render 'devise/shared/links'
