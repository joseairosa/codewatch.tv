= render partial: 'shared/breadcrumbs', locals: {page_name: 'Change your password'}
.container.content
  .row
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: 'reg-page'}) do |f|
        = f.hidden_field :reset_password_token
        .reg-header
          %h2 Change your password
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.fa.fa-user
          = f.password_field :password, autofocus: true, autocomplete: 'off', placeholder: 'Password', required: true, class: 'form-control'
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.fa.fa-user
          = f.password_field :password_confirmation,  autocomplete: 'off', placeholder: 'Confirm password', required: true, class: 'form-control'
        .row
          .col-md-12.margin-bottom-10
            = f.submit 'Change my password', class: 'btn-u'
      %hr
        = render 'devise/shared/links'
