.panel.panel-profile
  .panel-heading.overflow-h
    %h2.panel-title.heading-sm.pull-left
      %i.fa.fa-comments-o
      Chat
  #chat-messages.panel-body.no-padding
  .panel-footer
    = form_tag("/chat/#{channel.user.chat_id}/new_message", :id => 'new_message_form', :remote => true) do
      %input#channel_id{:type => "hidden", :value => "#{channel.user.chat_id}"}
      .input-group
        - if current_user
          %input#chat-message.btn-input.form-control.input-sm{:placeholder => "Type your message here...", :type => "text", :name => "message"}/
          %span.input-group-btn
            %button#btn-chat.btn.btn-warning.btn-sm
              Send
        - else
          = link_to 'Log in', new_user_session_path
          or
          = link_to 'Register', new_user_registration_path
          to participate in the chat.
#new-message.hidden
  = render partial: 'shared/chat_message_template'
