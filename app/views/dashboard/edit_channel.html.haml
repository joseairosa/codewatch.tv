#edit-channel.channel
  = form_tag({controller: :dashboard , action: :edit_channel}, {id: 'sky-form4', class: 'sky-form'}) do
    .row{style: 'margin: 0 0 0 -15px;'}
      .col-md-8
        #channel-online
          %section#channel-title
            %label.input
              %input{:name => 'channel[title]', :type => "text", :value => channel.title}
                %b.tooltip.tooltip-bottom-right Your stream title
          #stream-online.margin-bottom-50
            = render partial: 'shared/stream', locals: {file: "/api/v1/smil/#{channel.user.username}", type: 'rtmp'}
          .description
            %textarea{class: 'form-control tinymce', id: 'channel-description', name: 'channel[description]', rows: '15'}= channel.description
            = tinymce
      .col-md-4
        #choose-category
          .row
            .col-md-4
              %label.select
                %select{name: 'channel[category]'}
                  - Category.all.to_a.each do |category|
                    %option{value: category.name, selected: (channel.category.name == category.name)}= category.name
                %i
            .col-md-4.col-md-offset-4
              %button.btn-u{:type => "submit"} Save Changes
        .channel-body
          = render partial: 'shared/channel_stats', locals: {total_viewers: channel.total_viewers, current_viewers: (channel.online? ? channel.current_viewers : '0'), likes: channel.likes, vod_count: channel.user.recordings.where(visible: 1).count}
          %hr
            .row
              .col-sm-12
                #chat-online
                  #chat-alerts
                  = render 'shared/chat'


